<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_gui_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        tools:ignore="UselessParent"
        android:id="@+id/GIANTBACKGROUND"
        android:background="#67361E"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playnicekids">

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:id="@+id/leftInfo">

    <Space
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:layout_weight="0.28" />

    <TextView
    android:text="AREA FOR THE TURN INFO"
    android:layout_width="match_parent"
    tools:ignore="HardcodedText,Suspicious0dp"
    android:layout_weight="1"
    android:layout_height="50dp"
    android:id="@+id/turnInfo" />

    <SurfaceView
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_weight="0.50"
    android:background="#08457E"
    android:id="@+id/bluetreasures" />

    <Space
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.28" />

    <SurfaceView
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:id="@+id/redTreasures"
    android:background="#CE1620"
    android:layout_weight="0.49" />

    <Space
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.28" />

    <SurfaceView
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_weight="0.50"
    android:id="@+id/greenTreasures"
    android:background="#177245" />

    <Space
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.28" />

    <SurfaceView
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_weight="0.50"
    android:background="#F4C430"
    android:id="@+id/yellowTreasures" />

    <Space
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.28" />

    </LinearLayout>

    <Space
    android:layout_width="18dp"
    android:layout_height="match_parent" />

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/leftMostButtons">

    <Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />

    <ImageButton
    android:src="@android:drawable/ic_media_play"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/leftColT"
    android:layout_weight="1"
    android:contentDescription=""
    tools:ignore="ContentDescription" />



    <Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />

    <ImageButton
    android:src="@android:drawable/ic_media_play"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:id="@+id/leftColM" />

    <Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />

    <ImageButton
    android:src="@android:drawable/ic_media_play"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/leftColB"
    android:layout_weight="1" />

    <Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="530dp"
    android:layout_height="match_parent">

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/topbuttons">

    <Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />

    <ImageButton
    android:src="@android:drawable/arrow_down_float"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/topRowL"
    android:layout_weight="0.63" />

    <Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />

    <ImageButton
    android:src="@android:drawable/arrow_down_float"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/topRowM"
    android:layout_weight="0.46" />

    <Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />

    <ImageButton
    android:src="@android:drawable/arrow_down_float"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/topRowR"
    android:layout_weight="0.47" />

    <Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />
    </LinearLayout>

    <SurfaceView
    android:layout_height="wrap_content"
    android:id="@+id/ACTUALMAZE"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:background="#9999CC" />

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/buttombuttons">

    <Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />

    <ImageButton
    android:src="@android:drawable/arrow_up_float"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/botRowL"
    android:layout_weight="1" />

    <Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />

    <ImageButton
    android:src="@android:drawable/arrow_up_float"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/botRowM"
    android:layout_weight="1" />

    <Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />

    <ImageButton
    android:src="@android:drawable/arrow_up_float"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/botRowR"
    android:layout_weight="1" />

    <Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/rightmostbuttons">

    <Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />

    <ImageButton
    android:src="@android:drawable/ic_media_rew"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rightColT"
    android:layout_weight="1" />

    <Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />

    <ImageButton
    android:src="@android:drawable/ic_media_rew"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rightColM"
    android:layout_weight="1" />

    <Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />

    <ImageButton
    android:src="@android:drawable/ic_media_rew"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:id="@+id/rightColB" />

    <Space
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1" />

    </LinearLayout>

    <Space
    android:layout_width="15dp"
    android:layout_height="match_parent" />

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:id="@+id/moveButtonArea"
    android:weightSum="1"
    android:layout_weight="0.99">

    <Space
    android:layout_width="match_parent"
    android:layout_height="75dp" />

    <Button
    android:text="MOVE"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:id="@+id/moveButton" />

    <Space
    android:layout_width="match_parent"
    android:layout_height="21dp" />

    <SurfaceView
    android:layout_width="match_parent"
    android:layout_height="345dp"
    android:id="@+id/surfaceView7"
    android:background="#18391B" />

    <Space
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    </LinearLayout >


    </LinearLayout ></LinearLayout >
</RelativeLayout>