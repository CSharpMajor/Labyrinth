                android:layout_height="75dp"
                android:layout_weight="0.28"
                android:id="@+id/greenInfo">

                <ImageView
                    android:src="@mipmap/greenIcon"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView5"
